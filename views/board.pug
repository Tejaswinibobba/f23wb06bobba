extends layout

block content
  h1= title
  p Query rows: #{query.rows}, Query cols: #{query.cols}
  - let rows = Number(query.rows)
  - let cols = Number(query.cols)
  - if (!Number.isInteger(rows) || !Number.isInteger(cols))
  p Rows and cols must be integers.
  - else if (rows < 1 || rows > 10)
  p Rows must be in the range of 1 to 10.

  - else if (cols < 1 || cols > 10)
  p Cols must be in the range of 1 to 10.

  table#outer
  - for (let i = 0; i < rows; i++)
    tr#middle
      - for (let j = 0; j < cols; j++)
        td= computeCellValue(i, j)
  script.
  function computeCellValue(row, col) {
    if (row === col) {
      return 1;
    } else if (row === col - 1) {
      return 2;
    } else if (row === col + 1) {
      return row;
    } else {
      return 0;
    }
  }

